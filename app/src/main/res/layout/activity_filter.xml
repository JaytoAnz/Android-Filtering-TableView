<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.FilterActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/mToolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <!--<Spinner-->
            <!--android:id="@+id/spinner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:dropDownSelector="?attr/selectableItemBackground"-->
            <!--android:backgroundTint="@color/green"/>-->

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:padding="10dp"
            android:hint="Nama"
            android:textCursorDrawable="@color/green"
            android:inputType="textPersonName"
            app:met_textColor="#00bfa5"
            app:met_floatingLabelTextColor="#66000000"
            app:met_primaryColor="#ff99cc00" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/npm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:padding="10dp"
            android:hint="NPM"
            android:textCursorDrawable="@color/green"
            android:inputType="number"
            app:met_textColor="#00bfa5"
            app:met_floatingLabelTextColor="#66000000"
            app:met_primaryColor="#ff99cc00"/>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tanggaldari"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:editable="false"
                android:clickable="false"
                android:textColor="@color/green"/>

            <ImageView
                android:id="@+id/date1"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_today_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foreground="?attr/selectableItemBackground"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sampai"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Sampai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tanggalke"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/green"
                android:layout_weight="1"
                android:editable="false"
                android:clickable="false"/>

            <ImageView
                android:id="@+id/date2"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_today_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/usia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:padding="10dp"
            android:hint="Usia"
            android:textCursorDrawable="@color/green"
            android:inputType="number"
            app:met_textColor="#00bfa5"
            app:met_floatingLabelTextColor="#66000000"
            app:met_primaryColor="#ff99cc00"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_marginTop="15dp"
            android:text="OK"
            android:textColor="@color/backgroundcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/border_linearlay"/>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>